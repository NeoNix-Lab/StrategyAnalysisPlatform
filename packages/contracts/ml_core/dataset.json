{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ML Core - Dataset Schemas",
  "version": "1.0.0",
  "definitions": {
    "Dataset": {
      "type": "object",
      "properties": {
        "dataset_id": { "$ref": "../api_gateway/common.json#/definitions/UUID" },
        "name": { "type": "string" },
        "description": { "type": ["string", "null"] },
        "created_utc": { "$ref": "../api_gateway/common.json#/definitions/Timestamp" },
        "sources_json": {
          "type": "array",
          "items": { "type": "object" },
          "minItems": 1
        },
        "feature_config_json": {
          "type": ["array", "null"],
          "items": { "type": "string" }
        }
      },
      "required": ["dataset_id", "name", "sources_json", "created_utc"],
      "additionalProperties": false
    }
  }
}
