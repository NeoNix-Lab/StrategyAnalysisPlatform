{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ML Core - Training Schemas",
  "version": "1.0.0",
  "definitions": {
    "MlRewardFunction": {
      "type": "object",
      "properties": {
        "function_id": { "$ref": "../api_gateway/common.json#/definitions/UUID" },
        "name": { "type": "string" },
        "code": { "type": "string" },
        "description": { "type": ["string", "null"] },
        "created_utc": { "$ref": "../api_gateway/common.json#/definitions/Timestamp" },
        "metadata_json": { "type": ["object", "null"] }
      },
      "required": ["function_id", "name", "code", "created_utc"],
      "additionalProperties": false
    },
    "MlTrainingSession": {
      "type": "object",
      "properties": {
        "session_id": { "$ref": "../api_gateway/common.json#/definitions/UUID" },
        "name": { "type": "string" },
        "function_id": { "$ref": "../api_gateway/common.json#/definitions/UUID" },
        "model_id": { "$ref": "../api_gateway/common.json#/definitions/UUID" },
        "process_id": { "$ref": "../api_gateway/common.json#/definitions/UUID" },
        "status": { "type": "string", "default": "PLANNED" },
        "created_utc": { "$ref": "../api_gateway/common.json#/definitions/Timestamp" }
      },
      "required": ["session_id", "name", "created_utc"],
      "additionalProperties": false
    },
    "MlIteration": {
      "type": "object",
      "properties": {
        "iteration_id": { "$ref": "../api_gateway/common.json#/definitions/UUID" },
        "session_id": { "$ref": "../api_gateway/common.json#/definitions/UUID" },
        "dataset_id": { "$ref": "../api_gateway/common.json#/definitions/UUID" },
        "name": { "type": ["string", "null"] },
        "split_config_json": { "type": ["object", "null"] },
        "status": { "type": "string", "default": "PENDING" },
        "metrics_json": { "type": ["object", "null"] },
        "model_artifact_path": { "type": ["string", "null"] },
        "logs_json": { "type": ["object", "null"] },
        "start_utc": { "$ref": "../api_gateway/common.json#/definitions/Timestamp" },
        "end_utc": { "$ref": "../api_gateway/common.json#/definitions/Timestamp" }
      },
      "required": ["iteration_id", "session_id", "dataset_id"],
      "additionalProperties": false
    }
  }
}
